  <view class="div1" wx:if="{{shou==0&&user==0}}" style='height:auto;position:relative;'>
    <image src='../img/bg13.png' class='div11' style="display:{{content.title ? '' : 'none'}}"></image>
    <view class='ziti1' auto-height style='float:left;'>{{content.title}}</view>
    <view bindtap='showtip' style='height:120rpx;margin-left:92%;'>
      <image src='../img/bg14.png' class='div12'></image>
      <text class='ziti2'>举报</text>
    </view>
  </view>

  <view class="div1" wx:if="{{shou==1||user==1}}" style='height:auto;position:relative;'>
    <image src='../img/bg13.png' class='div11' style="display:{{content.title ? '' : 'none'}}"></image>
    <view class='ziti1' auto-height style='float:left;'>{{content.title}}</view>
    <view bindtap='buttonTap' style='height:120rpx;margin-left:92%;'>
      <image src='../img/bg25.jpg' class='div12' style='margin-top:24rpx;'></image>
      <text class='ziti2' style='width:30px;margin-top:0rpx;margin-left:-5px;'>二维码</text>
    </view>
  </view>

  <image bindtap="viewImage"  data-src="{{img}}{{content.url}}" src="{{img}}{{content.url}}" wx:if="{{content.url!=''}}" style='width:90%;margin-top:10rpx;margin-left:5%;border-radius:15rpx;' mode="widthFix">
  </image>

  <view class='ziti3' style='margin-top:5rpx;'>{{content.content}}</view>

  <view style='width:90%;margin-left:5%;' wx:for="{{content.urls}}" data-index="{{index}}">
    <image src="{{img}}{{item}}"  bindtap="viewImage" data-src="{{img}}{{content.urls}}"  wx:if="{{item!='' && item!='1'}}"  style='border-radius:15rpx;margin-top:25rpx;width:100%;' mode="widthFix">
    </image>
    <view class='ziti3' style='margin-top:5rpx;'>{{jj[index]}}</view>
  </view>

<!-- <view  wx:for="{{content.urls}}">{{item}}</view> -->

  <view style='margin-top:25rpx;margin-left:5%'>
    <image src='../img/bg13.png' style='width:4rpx;height:49rpx;float:left;border-radius:10rpx'></image>
    <text class='ziti4'>评论</text>
    <view style='clear:both'></view>
  </view>

  <view class='div2' wx:for="{{ping}}" >
    <!-- <image src='../img/bg16.png' style='width:26rpx;height:26rpx;'></image> -->
    <view style='width:28rpx;height:28rpx;border-radius:500rpx;float:left; background-color:{{item.usercol}};opacity:0.8;'></view>
    <text data-pid='{{item.id}}'  bindlongtap='havesave' class='ziti5'>{{item.content}}</text>
    <view style='clear:both;'></view>
  </view>

