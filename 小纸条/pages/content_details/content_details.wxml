<form bindsubmit="formSubmit">
  <view class="div3">
    <textarea placeholder='发表评论...' name='content'  maxlength='500' fixed='true'  bindfocus='onChangeShowState' bindblur="onChangeShowState1"   auto-height cursor-spacing='20'
 class="{{isIphone5?'box113': 'box112'}}" value="{{cont}}">
    </textarea>
    <view class="hide {{showView1?'':'show'}}">
      <image bindtap='shou'  wx:if="{{shou==0}}" src='../img/bg18.png' class='div32' ></image>
      <image bindtap='qushou'  wx:if="{{shou==1}}" src='../img/bg28.png' class="{{isIphone5?'box116': 'div32'}}"></image>
      <!-- <image catchtap='onCollectionTap'  wx:if="{{collected}}" src='../img/bg18.png' class='div32' ></image> -->
      <!-- <view  wx:else catchtap='onCollectionTap'><image src='../img/bg19.png' class='div32' ></image></view> -->
      <view style='margin-left:30rpx;' class="{{isIphone5?'ipx-bottom': 'ipx1-bottom'}}">
        <button class="{{isIphone5?'box115': 'box114'}}"  open-type='share'>
          <image src="../img/bg19.png" style="width:42rpx;height:42rpx;float:left;margin-top:20rpx;"></image>
        </button>
      </view>    
    </view>
    <button style='background:#ffd249;border-radius:50rpx;color:#000;font-size:28rpx;margin-left:592rpx;margin-top:24rpx;width:132rpx;height:56rpx;line-height:56rpx;' formType="submit" class="hide{{showView1?'show':''}}">发表</button>
  
  </view>

    <view style='width:220rpx;height:84rpx;position:fixed;bottom:200rpx;margin-left:100rpx;text-align:center;color:#fff;font-size:36rpx;line-height:84rpx;background:#fece00;border-radius:50rpx;'
    class='box-shadow-f' bindtap='huizhuye'>我也写
