<form bindsubmit="formSubmit">
<view class="{{isIphoneX?'div34': 'div3'}}">
    <view class="{{isIphoneX?'div35': 'div31'}}">
          <view class='input1'>
          <view style='width:90%;margin-left:5%;height:59rpx;float:left;'>
          <textarea  placeholder='发表评论...' name='content'  maxlength='500' fixed='true'  bindfocus='onChangeShowState' bindblur="onChangeShowState1"  cursor-spacing="20" placeholder-style=''
          style='width:100%;height:54rpx !important;float:left;color:#333;padding-top:5rpx;line-height:50rpx;'></textarea>
          </view>
          </view>
          <view class="hide{{showView1?'':'show'}}">
                <image bindtap='shou'  wx:if="{{shou==0}}" src='../img/bg18.png' class='div32' ></image>
                 <image bindtap='qushou'  wx:if="{{shou==1}}" src='../img/bg28.png' class='div32'></image>
                <!-- <image catchtap='onCollectionTap'  wx:if="{{collected}}" src='../img/bg18.png' class='div32' ></image> -->
                <!-- <view  wx:else catchtap='onCollectionTap'><image src='../img/bg19.png' class='div32' ></image></view> -->
                <view style='position:absolute;margin-left:85%;' class=" {{isIphone5?'ipx-bottom': 'ipx1-bottom'}}"><button style="background:none;"  open-type='share'>
                <image src="../img/bg19.png" style="width:52rpx;height:44rpx;"></image>
                </button>
                </view>    
          </view>
          <button style='background:#ffd249;border-radius:50rpx;color:#000;position:absolute;font-size:28rpx;margin-left:592rpx;margin-top:16rpx;width:132rpx;height:56rpx;line-height:56rpx;' formType="submit" class="hide{{showView1?'show':''}}">发表</button>
    </view>
</view>
</form>

